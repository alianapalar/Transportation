@model Reservation

@{
    ViewData["Title"] = "CreateReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1 class="text-center mt-2">CreateReservation</h1>

<form method="post" asp-action="CreateReservation">
    <input type="hidden" asp-for="ReservationId" />
    <input type="hidden" asp-for="TransportRequestId" value="@ViewBag.requestId" />
    <div class="form-group mb-3">
        <label asp-for="VehicleId" class="form-label">Araç seçiniz</label>
        <select asp-for="VehicleId" class="form-select" asp-items="@ViewBag.vehicle"></select>
    </div>
    <div class="form-group mb-3">
        <label asp-for="TransportTeamId" class="form-label">Takım seçiniz</label>
        <select asp-for="TransportTeamId" class="form-select" asp-items="@ViewBag.teams"></select>
    </div>
    <div class="form-group mb-3">
        <label asp-for="DriverId" class="form-label">Sürücü seçiniz</label>
        <select asp-for="DriverId" class="form-select" asp-items="@ViewBag.drivers"></select>
    </div>
    <div class="form-group my-3 d-flex justify-content-center">
        <button type="submit" class="btn btn-success">Submit</button>
    </div>
</form>



