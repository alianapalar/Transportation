@model List<Review>
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="text-center">
            <h6 class="text-secondary text-uppercase">Değerlendirmelerimiz</h6>
            <h1 class="mb-0">Kullanıcılar Şöyle Dedi</h1>
        </div>
        <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.1s">
            @foreach(var review in Model)
            {
                <div class="testimonial-item p-4 my-5">
                    <i class="fa fa-quote-right fa-3x text-light position-absolute top-0 end-0 mt-n3 me-4"></i>
                    <div class="d-flex align-items-end mb-4">
                        <img class="img-fluid flex-shrink-0" src="@review.User.Image" style="width: 80px; height: 80px;">
                        <div class="ms-4">
                            <h5 class="mb-1">@review.User.UserName</h5>
                            <p class="m-0">@review.Rating</p>
                        </div>
                    </div>
                    <p class="mb-0">@review.Comment</p>
                </div>
            }
            
            
        </div>
    </div>
</div>

