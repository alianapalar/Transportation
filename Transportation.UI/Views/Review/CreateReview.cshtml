@model Review
@{
    ViewData["Title"] = "CreateReview";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1 class="text-center">CreateReview</h1>

<form asp-action="CreateReview" method="post">
    <input type="hidden" asp-for="ReviewId" />
    <div class="form-group mb-3">
       <label asp-for="Rating" class="form-label">Değerlendirme Puanını 1-5 arası Seçiniz</label>
       <select class="form-select" asp-for="Rating">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
       </select>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Comment" class="form-label">Değerlendirme Yorumu Giriniz.</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Değerlendirme Kaydet</button>
    <input type="hidden" asp-for="ReservationId" value="@ViewBag.reservation" />
    <input type="hidden" asp-for="UserId" value="@ViewBag.userId" />
</form>